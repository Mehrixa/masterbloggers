@page "{id:long}"
@model MB.Presentation.MVC_Core.Areas.Administor.Pages.ArticleCategoryManagement.EditModel
@{
}

<div class="card">
    <div class="card-header">
        <h2>Edit Article Category: @Model.RenameArticleCategory.Title</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RenameArticleCategory.Id"/>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="RenameArticleCategory.Title" class="control-label">Title:</label>
                            <input asp-for="RenameArticleCategory.Title" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-warning"/>
                        <a class="btn btn-dark" asp-page="./List" asp-area="Administor">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>